#set theme and stuff
exec --no-startup-id wal -R -n
#then set wallpaper
exec --no-startup-id ~/.fehbg &
#now point to the colours made by wal
exec --no-startup-id xrdb -merge .cache/wal/colors.Xresources

#set colours using the resources set above
