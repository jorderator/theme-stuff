set $mod Mod4

set $home "/home/jorderator"

# set touchpad tapping to enabled on startup
exec --no-startup-id xinput set-prop 10 289 1
# set touchpad scrolling to the *right* setting
exec --no-startup-id xinput set-prop 10 297 1
# mouse acceleration stuff
#exec --no-startup-id xinput set-prop 10 297 -1

#maybe fix screen tearing
