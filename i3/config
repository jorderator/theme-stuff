bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# mode for handling new screens easily
mode "monitors" {
	# make the brightness script for this stuff
#	bindsym $mod+bracketleft exec xrand --output eDP-1 --brightness

	bindsym $mod+Shift+h exec xrandr-handlr DP-1 left-of eDP-1
	bindsym $mod+Shift+j exec xrandr-handlr DP-1 below eDP-1
	bindsym $mod+Shift+k exec xrandr-handlr DP-1 above eDP-1
	bindsym $mod+Shift+l exec xrandr-handlr DP-1 right-of eDP-1

	bindsym $mod+Ctrl+h exec xrandr-handlr HDMI-1 left-of eDP-1
	bindsym $mod+Ctrl+j exec xrandr-handlr HDMI-1 below eDP-1
	bindsym $mod+Ctrl+k exec xrandr-handlr HDMI-1 above eDP-1
	bindsym $mod+Ctrl+l exec xrandr-handlr HDMI-1 right-of eDP-1
	
        # back to normal: Escape or $mod+m
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}

# enter monitors mode
bindsym $mod+m mode "monitors"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar -t
        status_command i3status
	colors {
		background $bgCC

		#			Border		Background	Text
		focused_workspace	$color6DD	$color6DD	$color1
		inactive_workspace	$color1CC	$bgCC		$fg
		active_workspace	$color1CC	$color855	$fg
		urgent_workspace	$color3DD	$color3DD	$color6
		binding_mode		$color3DD	$color3DD	$color6
	}
}


# lock screen keybind
bindsym $mod+i exec --no-startup-id i3lock -efc 000000


#  volume stuff:
# mute toggle
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+o exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

# increase volume by 2%
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
bindsym $mod+equal exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2%
# increase volume by 10%
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym $mod+Shift+equal exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%

# decrease volume by 2$
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
bindsym $mod+minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2%
# decrease volume by 10%
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym $mod+Shift+minus exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%


#  cmus stuff
# play/pause
bindsym XF86AudioPlay exec --no-startup-id cmus-remote -u
bindsym $mod+p exec --no-startup-id cmus-remote -u

# skip forwards
bindsym XF86AudioNext exec --no-startup-id cmus-remote -n
bindsym $mod+n exec --no-startup-id cmus-remote -n

# skip backwards
bindsym XF86AudioPrev exec --no-startup-id cmus-remote -r
bindsym $mod+Shift+n exec --no-startup-id cmus-remote -r

# stop
bindysm XF86AudioStop exec --no-startup-id cmus-remote -s

# open
bindsym XF86Tools exec termite -e cmus


#  screenshot bindings
# desktop mode
bindsym $mod+s exec --no-startup-id maim ~/Pictures/screenshots/$(date +%m-%d-%H:%M.%S).png
# selection mode
bindsym $mod+Shift+s exec --no-startup-id maim -s ~/Pictures/screenshots/$(date +%m-%d-%H:%M.%S).png


#  brightness stuff
# increase brightness
bindsym XF86MonBrightnessUp exec --no-startup-id sudo backlight-change +2 
bindsym $mod+bracketright exec --no-startup-id sudo backlight-change +2

# decrease brightness
bindsym XF86MonBrightnessDown exec --no-startup-id sudo backlight-change -2
bindsym $mod+bracketleft exec --no-startup-id sudo backlight-change -2


# emergency thing for screen, in case
